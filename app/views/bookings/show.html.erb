
<% flash.each do |type, msg| %>
  <div class="alert alert-success text-center">
    <%= msg %>
  </div>
<% end %>

<div class="text-center my-4">
  <h1 class="bubble-bit-font">Your Flight</h1>
</div>

<div class="card d-flex flex-column mx-auto mt-2" style="width: 52rem">
  <div class="card-body mx-auto">
    <div class="mb-4 text-center">
      Flight Number : <%= @flight.flight_number %> | 
      Departs: <%= @flight.departure_airport.location %> | 
      Arrives: <%= @flight.arrival_airport.location %> | 
      Date: <%= @flight.departure_date.strftime("%A, %B %d") %>
      <br>
      Departure Time: <%= @flight.departure_time %> | 
      Duration: <%= @flight.flight_duration %>
    </div>

<h2 class="text-center bubble-bit-font">Passenger Info</h2>

<% @booking.passengers.each do |passenger| %>
  <%= "Name: #{passenger.name}" %> | 
  Seat: <%= "#{(65 + rand(20)).chr }#{rand(1..6)}" %>
  <br>
<% end %>
  </div>
</div>
